# 263邮箱API配置
MAIL_263_ACCOUNT=your_account
MAIL_263_SECRET=your_secret_key
MAIL_263_DOMAIN=your_domain.com

# 钉钉API配置
DINGTALK_APP_KEY=your_dingtalk_app_key
DINGTALK_APP_SECRET=your_dingtalk_app_secret
DINGTALK_AGENT_ID=your_dingtalk_agent_id

# HTTP服务器端口 (HTTP模式时使用，默认3000)
PORT=3000

# HTTP 认证配置（强烈推荐）
# 生成强随机 API Key: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
MCP_API_KEY=your_secure_random_api_key_here_min_32_chars

# 是否需要认证 (默认: true，设置为 false 可禁用认证，不推荐)
REQUIRE_AUTH=true

# CORS 允许的来源（默认: *，生产环境应设置具体域名）
ALLOWED_ORIGIN=*

# API地址 (可选，默认为线上环境)
MAIL_263_API_URL=https://ma.263.net/api/mail/v2
